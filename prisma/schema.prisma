generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum AuthProvider {
  LOCAL
  GOOGLE
  FACEBOOK
}

model User {
  id           Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  isActive     Boolean      @default(true)
  role         Role         @default(USER)
  authProvider AuthProvider
  email        String       @unique
  username     String       @unique
  password     String?
  firstName    String
  lastName     String

  @@map("users")
}

model TemperatureSensor {
  id   String            @id @unique
  data TemepratureData[]

  @@map("temperature-sensor")
}

model TemepratureData {
  id          Int      @id @default(autoincrement())
  temperature Int
  date        DateTime

  sensorId String
  sensor   TemperatureSensor @relation(fields: [sensorId], references: [id])

  @@map("temperature-data")
}
